{
  "manifest_version": 3,
  "name": "Arc Search",
  "version": "1.0.0",
  "description": "Replaces the generic new tab page with a search engine similar to Arc.",
  "permissions": [
    "scripting",
    "tabs",
    "history",
    "topSites"
  ],
  "icons": {
    "16": "arc.png",
    "48": "arc.png",
    "128": "arc.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "show-search": {
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "Command+T"
      },
      "description": "Show search overlay"
    }
  }
}
